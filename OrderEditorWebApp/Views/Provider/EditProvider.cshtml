@model OrderEditorWebApp.Models.Provider;
@{
    ViewData["Title"] = "Edit Provider";
}
<h3>@ViewData["Title"]</h3>
<h3>@ViewData["Message"]</h3>

<form asp-action="editprovider" asp-controller="provider" asp-route-id="@Model.Id">
    <div class="form-group">
        <label class="control-label">Name</label>
        <input type="text" asp-for="Name" class="form-control" style="width: 30%" />
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>
