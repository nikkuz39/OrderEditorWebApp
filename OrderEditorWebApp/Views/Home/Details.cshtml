@model OrderEditorWebApp.Models.ViewModelOrder;
@{
    ViewData["Title"] = "Order";
}
<h3>@ViewData["Title"]</h3>
<h3>@ViewData["Message"]</h3>

<form asp-action="details" asp-controller="home">
    <input type="hidden" asp-for="Order.Id" />
    <input type="hidden" asp-for="OrderItem.Id" />
    <div class="form-group">
        <label class="control-label">Number</label>
        <input type="text" asp-for="Order.Number" class="form-control" style="width: 30%" />
    </div>
    <div class="form-group">
        <label class="control-label">Date</label>
        <input type="date" asp-for="Order.Date" class="form-control" style="width: 30%" />
    </div>
    <div>
        <label class="control-label">Provider</label>
            <select asp-for="Provider.Id" required class="form-control" style="width: 30%">
                @if (Model == null)
                {
                    <option>No data</option>
                }
                else
                {
                    @foreach (var provider in Model.Providers)
                    {
                        <option value="@provider.Id">@provider.Name</option>

                        @if (Model.Order.ProviderId == provider.Id)
                        {
                            <option selected="selected" value="@provider.Id">@provider.Name</option>
                        }
                    }
                }                
            </select>
    </div>
    <div class="form-group">
        <label class="control-label">Item name</label>
        <input type="text" asp-for="OrderItem.Name" class="form-control" style="width: 30%" />
    </div>
    <div class="form-group">
        <label class="control-label">Quantity</label>
        <input type="text" asp-for="OrderItem.Quantity" class="form-control" style="width: 30%" />
    </div>
    <div class="form-group">
        <label class="control-label">Unit</label>
        <input type="text" asp-for="OrderItem.Unit" class="form-control" style="width: 30%" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="index" asp-controller="home" class="btn btn-primary">Back</a>
    </div>
</form>